<body>
    <div class="container mt-5 d-flex justify-content-center align-items-center flex-column">
        <h1 class="animated-title text-white">Register</h1>
        {{#if message}}
            <div class="alert alert-danger fade-in">{{message}}</div>
        {{/if}}
        <form action="/register" method="POST" class="form-box">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control input-animate" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control input-animate" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-animated">Register</button>
        </form>
        <p class="mt-3 text-white">Already have an account? <a href="/login" class="link-animate">Login</a></p>
    </div>
</body>
