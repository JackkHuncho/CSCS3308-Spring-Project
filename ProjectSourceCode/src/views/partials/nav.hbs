<style>
  .navbar-nav .nav-link,
  .navbar-brand {
    position: relative;
    color: white;
    text-decoration: none;
    transition: transform 0.2s ease-out, color 0.3s ease-in-out;
    overflow: hidden;
  }

  .navbar-brand .brand-text {
    position: relative;
    display: inline-block;
  }

  .navbar-brand .brand-text::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: rgba(0, 123, 255, 1);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease-out;
  }

  .navbar-brand .brand-text:hover::after {
    transform: scaleX(1);
  }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 4px;
    background-color: rgba(0, 123, 255, 0.9);
    filter: blur(2px);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease-out;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  @keyframes shakeGlowScale {
    0%   { transform: translateY(-2px) rotate(0.5deg) scale(1); }
    25%  { transform: translateY(-2px) rotate(-0.5deg) scale(1.02); }
    50%  { transform: translateY(-2px) rotate(0.5deg) scale(1.03); }
    75%  { transform: translateY(-2px) rotate(-0.5deg) scale(1.04); }
    100% { transform: translateY(-2px) rotate(0deg) scale(1.05); }
  }

  .navbar-nav .nav-link:hover:not(:has(img)),
  .navbar-brand .brand-text:hover {
    animation: shakeGlowScale 0.3s ease-in-out forwards;
    color: #e0e0e0;
    text-shadow: 0 0 4px rgba(0, 123, 255, 0.4);
  }

  .nav-link:has(img)::after {
    display: none !important;
  }

  .dropdown-menu {
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: opacity 0.2s ease-in-out, transform 0.2s ease-in-out;
  }

  .dropdown-menu.show {
    display: block;
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .signup-link {
    background-color: rgba(0, 123, 255, 0.8);
    border-radius: 6px;
    padding: 6px 12px;
    color: white;
    font-weight: 500;
    transition: background-color 0.2s ease-in-out;
  }

  .signup-link:hover {
    background-color: rgba(0, 123, 255, 1);
    text-decoration: none;
    color: #fff;
  }

  .nav-link:hover img {
    transform: scale(1.08);
    transition: transform 0.2s ease-in-out;
  }

</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary bg-gradient px-3">
  <a class="navbar-brand fw-bold text-white d-flex align-items-center gap-2" href="/home">
    <img src="/img/logo.png" alt="Logo" style="height: 40px; width: 40px; border-radius: 50%;">
    <span class="brand-text">CrossTune</span>
  </a>

  {{#if user}}
    <div class="d-lg-none dropdown">
      <a
        class="nav-link dropdown-toggle d-flex align-items-center"
        href="#"
        id="mobileUserDropdown"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <img
          src="{{user.pfp}}"
          alt="Profile Picture"
          class="rounded-circle border"
          width="40"
          height="40"
          style="object-fit: cover; border: 2px solid white;"
        />
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="mobileUserDropdown">
        <li><a class="dropdown-item" href="/profile">Profile</a></li>
        <li><a class="dropdown-item" href="/settings">Settings</a></li>
        <li><hr class="dropdown-divider" /></li>
        <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
      </ul>
    </div>
  {{else}}
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
  {{/if}}

  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav align-items-center">
      {{#if user}}
        <li class="nav-item dropdown d-none d-lg-block">
          <a
            class="nav-link dropdown-toggle d-flex align-items-center"
            href="#"
            id="userDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            style="padding: 5px 10px; border-radius: 8px;"
          >
            <img
              src="{{user.pfp}}"
              alt="Profile Picture"
              class="rounded-circle border"
              width="40"
              height="40"
              style="object-fit: cover; border: 2px solid white;"
            />
            <span class="ms-2 d-none d-md-inline text-white">{{user.name}}</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><a class="dropdown-item" href="/settings">Settings</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
          </ul>
        </li>
      {{else}}
        <li class="nav-item">
          <a class="signup-link nav-link text-white" href="/register">Sign Up</a>
        </li>
      {{/if}}
    </ul>
  </div>
</nav>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
