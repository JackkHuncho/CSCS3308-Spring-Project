<style>
    .post {
        background-color: #f9f9f9;
        border-radius: 8px;
        overflow: hidden;
        height: 250px;
        position: relative;
        margin-bottom: 10px;
    }
    
    .post-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .post-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
        padding: 10px;
        color: white;
        opacity: 0;
        transition: opacity 0.3s;
    }
    
    .post:hover .post-overlay {
        opacity: 1;
    }
    
    .post-title {
        font-weight: bold;
        margin-bottom: 5px;
    }
    
    .post-date {
        font-size: 12px;
    }
</style>
<div class="post">
    <img src="https://source.unsplash.com/random/600x600/?nature" alt="Post" class="post-img">
    <div class="post-overlay">
        <div class="post-title">{{ title }}</div>
        <div class="post-date">2 days ago</div>
    </div>
</div>